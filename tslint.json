{
  "defaultSeverity": "error",
  "extends": [
    "tslint-config-standard"
  ],
  "rules": {
    "space-before-function-paren": [true, "never"],
    "semicolon": [true, "always"],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "always"
        }
      }
    ],
    "member-access": [true, "check-accessor"]
  }
}