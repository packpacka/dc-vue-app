{
  "name": "dc-modern",
  "version": "0.0.1",
  "description": "Delivery Club frontend and pwa",
  "scripts": {
    "start": "npm run build:watch && npm run server:express",
    "build": "rm -rf ./public/build && webpack --progress --config webpack.config.prod.js",
    "build:watch": "rm -rf ./public/build && webpack --progress --config webpack.config.dev.js -w",
    "build:test": "webpack --progress --config webpack.config.test.js",
    "build:test:watch": "onchange 'src/app/**/*.ts' -- npm run build:test",
    "test": "npm run build:test && karma start karma.conf.once.js",
    "test:watch": "onchange 'src/app/**/*.ts' -- npm test",
    "wds": "webpack-dev-server --config webpack.config.dev.js --progress --history-api-fallback --inline --content-base ./public --port 4900",
    "hmr": "npm run wds -- --hot",
    "server:express": "ts-node ./server/index"
  },
  "devDependencies": {
    "@types/es6-promise": "0.0.32",
    "@types/express": "^4.0.35",
    "@types/jasmine": "^2.5.47",
    "@types/node": "^8.0.16",
    "awesome-typescript-loader": "^3.0.3",
    "axios": "^0.15.3",
    "core-js": "^2.4.1",
    "css-loader": "^0.26.1",
    "express": "^4.15.4",
    "extract-text-webpack-plugin": "2.0.0-rc.3",
    "file-loader": "^0.10.1",
    "html-loader": "^0.4.5",
    "jasmine": "^2.5.3",
    "jasmine-core": "^2.5.2",
    "karma": "^1.6.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-jasmine": "^1.1.0",
    "localforage": "^1.5.0",
    "node-sass": "^4.5.0",
    "onchange": "^3.2.1",
    "path": "^0.12.7",
    "raw-loader": "^0.5.1",
    "rxjs": "^5.4.0",
    "sass-loader": "^5.0.1",
    "scss-loader": "0.0.1",
    "style-loader": "^0.13.1",
    "ts-node": "^3.0.4",
    "tslint": "^5.6.0",
    "tslint-config-standard": "^6.0.1",
    "typescript": "^2.3.4",
    "v-mask": "^1.1.0",
    "vue": "^2.3.3",
    "vue-class-component": "^4.4.0",
    "vue-hot-reload-api": "^2.0.11",
    "vue-router": "2.1.3",
    "vue-scroll": "^2.0.2",
    "vue-template-loader": "^0.2.4",
    "vuex": "2.1.3",
    "webpack": "^2.2.1",
    "webpack-bundle-analyzer": "^2.3.1",
    "webpack-dev-server": "^2.3.0"
  }
}
